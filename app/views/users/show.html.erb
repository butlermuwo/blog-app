<h1><%= @user.name %></h1>
<%= image_tag "https://nuwaay.com/wp-content/uploads/2022/01/default_256.png", class: "card-img-top" %>
<p>Number of Posts <%= @user.posts.count%></p>
<p><%= @user.bio %></p>
<h2>Posts</h2>
<% @user.recent_posts.each do |post| %>
    <div class="post">
        <h3><%= link_to post.title, user_post_path(user_id: post.author_id, id: post.id) %></h3>
        <p><%= post.text %></p>
        <p>Comments: <%= post.comments.count %></p>
        <p>Likes: <%= post.likes.count %></p>
    </div>
<% end %>
<div>
    <button> <%= link_to "See all posts", user_posts_path(@user) %> </button>
</div>